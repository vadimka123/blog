- provide(:title, 'Вход')

.container.content
  .row
    .pin-article.span4{:style => 'float: none; margin: 0 auto;'}
      %article.article
        %center
          %h3.title
            Вход на сайт
          %br
        .container-fluid
          .row-fluid
            .span12
              = form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form', class: 'contact-form'  }) do |f|
                .text-field-half
                  = f.email_field :email, autofocus: true, placeholder: 'Ваша электронная почта'
                %br
                .text-field-half
                  = f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Пароль для входа', type: 'password'
                %br
                - if devise_mapping.rememberable?
                  .checkbox
                    %label
                      = f.check_box :remember_me
                      = f.label :remember_me, 'Запомнить меня'
                %br
                - flash.each do |name, msg|
                  %center
                    = content_tag :section, msg, :class => 'flash', :style => 'color:red;'
                %center
                  %p.form-submit
                    = f.submit 'Войти'
%br
%br
%br